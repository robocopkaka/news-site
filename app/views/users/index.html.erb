
  <div class="article-row-section">
    <div class="article-row-section-inner">

      <h2 class="article-row-section-header">News</h2>
      <% @articles.each do |article| %>
      <%= link_to article["url"] do%>
        <article class="article-row">
          <div class="article-row-img">
           <!--  <%= image_tag(article["urlToImage"], size: "200x200") %> -->
          </div>
          <div class="article-row-content">
            <h1 class="article-row-content-header"><%= article["title"] %></h1>

            <p class="article-row-content-description"><%= truncate(article["description"], length: 100) %></p>

            <p class="article-row-content-author"><%= article["author"] %></p>
            <time class="article-row-content-time" datetime="2008-02-14 20:00"><%= article["publishedAt"] %></time>
          </div>
        </article>
      <% end %>
      <% end %>
    </div>
  </div>

